.itemEditBody
  = simple_form_for([current_user, @item]) do |f|
    = f.error_notification

    .form-inputs
      = f.input :title
      = f.input :tag_names, label: 'Tags', input_html: { value: @item.current_tag_names }
      = f.input :body, input_html: { rows: 15 }

    .form-actions
      = f.button :submit, class: 'btn btn-primary'
