.container
  %p
    %b User:
    = @item.user.name
  %p
    %b Title:
    = @item.title
  = markdown(@item.body)

  - if current_user == @item.user
    = link_to '投稿を編集', edit_user_item_path(current_user, @item), class: 'btn btn-primary'
    = link_to '削除', user_item_path(current_user, @item), method: :delete, class: 'btn btn-danger'

