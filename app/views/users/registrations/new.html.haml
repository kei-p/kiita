.page-header
  .container
    %h2 ユーザー登録

.page-body
  .container
    = simple_form_for(resource, url: user_registration_path) do |f|
      .form-inputs
        = f.input :name
        = f.input :email
        = f.hidden_field :icon_url
        - if resource.password_required?
          = f.input :password
          = f.input :password_confirmation

      .form-actions
        = f.submit "登録", class: 'btn btn-primary'

    = link_to "キャンセル", welcome_path, class: 'btn btn-default'
