.itemEditBody
  - path, method =  @draft.new_record? ? [drafts_path, :post] : [draft_path(@draft), :put]
  = simple_form_for(@draft, url: path, method: method) do |f|
    = f.error_notification

    .form-inputs
      = f.input :title
      = f.input :tag_names, label: 'Tags', input_html: { value: @draft.current_tag_names }
      = f.input :body, input_html: { rows: 15 }
      = f.input :publish, as: :boolean

    .form-actions
      = f.button :submit, class: 'btn btn-primary'
